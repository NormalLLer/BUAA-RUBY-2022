<%= form_with(model: hotel, id: "#{dom_id(hotel)}_form") do |form| %>

  <div class="form-group mb-3">
    <%= form.label :name, "酒店名", class: "mb-2",
                   style: "display: block; font-size: large; font-weight: bold" %>
    <%= form.text_field :name, class: "form-control", placeholder: "请输入新的酒店名" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :types, "酒店类型", class: "mb-2", style: "display: block; font-size: large; font-weight: bold" %>
    <%= form.text_field :types, class: "form-control", placeholder: "请输入该酒店的类型" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :rate, "酒店星级（1-5）", class: "mb-2", style: "display: block; font-size: large; font-weight: bold" %>
    <%= form.number_field :rate, placeholder: "请输入该酒店的星级", class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :location, "酒店位置", class: "mb-2", style: "display: block; font-size: large; font-weight: bold" %>
    <%= form.text_field :location, class: "form-control", placeholder: "请输入该酒店的位置" %>
  </div>

  <div class="form-group mb-3">
    <%= form.submit "确认", class: "btn btn-primary" %>
    <%= link_to "返回", admin_crud_path, class: "btn btn-outline-primary" %>
  </div>
<% end %>
