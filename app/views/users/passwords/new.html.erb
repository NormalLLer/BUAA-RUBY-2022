<div class="col-6 card shadow-lg mb-lg-3 mt-lg-5 mx-auto">
  <div class="card-body">
    <h2 class="card-title text-center mt-3 mb-3" style="font-weight: bold; font-size: xx-large">
      找回密码
    </h2>
    <div class="card-text">

      <%= form_for(resource, as: resource_name, url: new_user_password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <%= f.label :username, "用户名", style: "font-size: large; " %><br/>
          <%= f.text_field :username, autofocus: true, autocomplete: "email",
                            class: "form-control mt-1 mb-3",
                            placeholder: "请输入要找回密码的用户名（抱歉！此功能暂不可用）",
                            disabled: true %>
        </div>

        <div class="field form-group">
          <%= f.label :email, "邮箱", style: "font-size: large; " %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                            class: "form-control mt-1 mb-3",
                            placeholder: "请输入要找回密码的邮箱（抱歉！此功能暂不可用）",
                            disabled: true %>
        </div>


        <div class="actions mb-3">
          <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <%= f.submit "发送重置密码到邮箱", class: "btn btn-success disabled" %>
            <%= render "users/shared/links", resource: resource %>
          </div>
        </div>
      <% end %>

    </div>

  </div>

</div>
