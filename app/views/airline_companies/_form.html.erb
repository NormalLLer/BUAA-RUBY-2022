<%= form_with(model: airline_company, id: "#{dom_id(airline_company)}_form") do |form| %>

  <div class="form-group mb-3">
    <%= form.label :name, "航空公司名", class: "mb-2",
                   style: "display: block; font-size: large; font-weight: bold" %>
    <%= form.text_field :name, class: "form-control", placeholder: "请输入新的航空公司名" %>
  </div>

  <div class="form-group mb-3">
    <%= form.submit "确认", class: "btn btn-primary" %>
    <%= link_to "返回", admin_crud_path, class: "btn btn-outline-primary" %>
  </div>
<% end %>
