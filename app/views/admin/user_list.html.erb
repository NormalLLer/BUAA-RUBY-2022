<main>

  <div class="container mt-5">

    <div class="card mb-4 col-10 text-center mx-auto">
      <div class="card-body">
        <!-- Grid row -->
        <div class="row">
          <!-- Grid column -->
          <div class="col-md-12">
            <h2 class="mt-3 mb-4 text-center" style="font-weight: bold">
              用户列表（管理员操作）
            </h2>
            <!--                        <div class="input-group md-form form-sm form-2 pl-0">-->
            <!--                          <input class="form-control my-0 py-1 pl-3 purple-border" type="text" placeholder="Search something here..." aria-label="Search">-->
            <!--                          <span class="input-group-addon waves-effect purple lighten-2" id="basic-addon1"><a><i class="fa fa-search white-text" aria-hidden="true"></i></a></span>-->
            <!--                        </div>-->
          </div>
          <!-- Grid column -->
        </div>
        <!-- Grid row -->
        <!--Table-->
        <table class="table table-striped table-bordered shadow">
          <!--Table head-->
          <thead>
          <tr>
            <th>序号</th>
            <th>用户名</th>
            <th>邮箱</th>
            <th>注册时间</th>
            <th>用户权限</th>
            <th>操作</th>
          </tr>
          </thead>
          <!--Table head-->
          <tbody>
          <!--Table body-->


          <% @users.each_with_index do |user, i| %>
            <tr>
              <th class="align-middle" scope="row">
                <%= i + 1 %>
              </th>
              <td class="align-middle">
                <div style="font-weight: bold">
                  <%= user.username %>
                </div>
              </td>
              <td class="align-middle">
                <div class="text-decoration-underline">
                  <%= user.email %>
                </div>
              </td>
              <td class="align-middle">
                  <%= user.created_at.localtime.strftime '%Y年%m月%d日 %H:%M:%S' %>
              </td>
              <td class="align-middle">
                  <%= user.get_role %>
              </td>
              <% if current_user != user %>
                <td class="align-middle">
                  <%= button_to "删除账号", admin_destroy_user_path(user),
                                method: :delete, form: { data: { turbo_confirm: '您确定要删除该账号吗？' } },
                                class: "btn btn-danger btn-sm mt-sm-1 mb-sm-1" %>
                </td>
              <% else %>
                <td class="align-middle">
                  <div class="mt-sm-1 mb-sm-1 text-secondary">当前账号</div>
                </td>
              <% end %>
            </tr>
          <% end %>

          </tbody>

          <!--Table body-->
        </table>
        <!--Table-->
      </div>
    </div>

  </div>
  <!--MDB Tables-->

</main>