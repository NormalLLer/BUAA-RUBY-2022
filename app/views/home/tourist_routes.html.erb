      </ul>
    </div>

    <div class="card-body mt-0 mb-3">
      <div class="tab-content">

        <div class="tab-pane fade show active" id="show_all">
          <p class="card-text">
            <%= render 'tourist_routes_index' %>
          </p>
        </div>

        <div class="tab-pane fade" id="new">
          <p class="card-text">
            <%= render 'tourist_routes_new' %>
