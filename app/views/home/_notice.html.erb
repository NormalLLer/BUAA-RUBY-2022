<% if (notice and notice.is_a? String) or (flash[:notice] and flash[:notice].is_a? String) %>

  <div class="col-10 mx-auto mt-3 mb-0">
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <% if notice and notice.is_a? String %>
        <%= notice %>
      <% elsif flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>

<% else %>

  <% if !notice.is_a?(String) %>
    <% notice.to_set.each do |i| %>

      <div class="col-10 mx-auto mt-3 mb-0">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= i %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>

    <% end %>
  <% elsif !flash[:notice].is_a?(String) %>
    <% flash[:notice].to_set.each do |i| %>

      <div class="col-10 mx-auto mt-3 mb-0">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= i %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>

    <% end %>
  <% end %>

<% end %>